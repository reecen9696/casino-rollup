{
  "scripts": {
    "test": "./test-phase0.sh",
    "test:rust": "cargo test --workspace",
    "test:unit": "cargo test --workspace --lib",
    "test:integration": "cargo test --workspace --test '*'",
    "test:anchor": "anchor test --skip-local-validator",
    "test:explorer": "cd explorer && npm test",
    "test:ts": "npx tsc --noEmit",
    "build": "cargo build --workspace",
    "build:release": "cargo build --workspace --release",
    "check": "cargo check --workspace",
    "fmt": "cargo fmt --all",
    "clippy": "cargo clippy --workspace -- -D warnings",
    "dev:sequencer": "RUST_LOG=info cargo run --bin sequencer -- --database-url sqlite:zkcasino.db",
    "dev:explorer": "cd explorer && npm run dev",
    "dev:all": "concurrently \"npm run dev:sequencer\" \"npm run dev:explorer\"",
    "dev": "npm run dev:all",
    "setup": "npm install && cd explorer && npm install",
    "clean": "cargo clean && rm -rf explorer/dist explorer/node_modules node_modules"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.0",
    "concurrently": "^8.2.2",
    "mocha": "^9.0.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.3.0"
  }
}
